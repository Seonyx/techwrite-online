@page
@model IndexModel
@{
    ViewData["Title"] = "Home";
}

<section class="bg-primary text-white py-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-8">
                <h1 class="display-4 fw-bold">Professional Technical Writing Services</h1>
                <p class="lead mb-4">Clear, concise, and effective technical documentation that helps your users succeed.</p>
                <a asp-page="/Contact" class="btn btn-light btn-lg">Get in Touch</a>
            </div>
        </div>
    </div>
</section>

<section class="py-5">
    <div class="container">
        <h2 class="text-center mb-5">What I Do</h2>
        <div class="row g-4">
            <div class="col-md-4">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body text-center">
                        <h3 class="h5">Documentation</h3>
                        <p class="text-muted">User guides, API documentation, and technical manuals that make complex systems accessible.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body text-center">
                        <h3 class="h5">Process Writing</h3>
                        <p class="text-muted">Standard operating procedures, workflows, and process documentation for consistency and compliance.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body text-center">
                        <h3 class="h5">Content Strategy</h3>
                        <p class="text-muted">Information architecture and content planning to organize your technical content effectively.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="bg-light py-5">
    <div class="container text-center">
        <h2 class="mb-4">Ready to Improve Your Documentation?</h2>
        <p class="lead mb-4">Let's discuss how professional technical writing can help your business.</p>
        <a asp-page="/Services" class="btn btn-primary btn-lg me-2">View Services</a>
        <a asp-page="/Portfolio" class="btn btn-outline-primary btn-lg">See My Work</a>
    </div>
</section>
